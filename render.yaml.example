services:
  - type: web
    name: travel-health-api
    env: node
    rootDir: server
    buildCommand: npm install && npm run build
    startCommand: npm start
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 8000
      - key: MONGODB_URI
        sync: false  # Set this in Render dashboard
      - key: JWT_SECRET
        sync: false  # Set this in Render dashboard
      - key: JWT_EXPIRY
        value: 24h
      - key: CORS_ORIGIN
        sync: false  # Set this in Render dashboard
      - key: REDIS_URL
        sync: false  # This will be set automatically by Redis service
    healthCheckPath: /api/health
    autoDeploy: true

  - type: redis
    name: travel-health-cache
    ipAllowList: []
    plan: free
